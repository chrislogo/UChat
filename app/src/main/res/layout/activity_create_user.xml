<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="uchat.uchat.CreateUser"
    android:background="#ceb888">

    <EditText
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="First"
        android:id="@+id/first_name"
        android:layout_margin="15dp"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Last"
        android:id="@+id/last_name"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/first_name"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/user_email"
        android:layout_margin="15dp"
        android:layout_below="@id/last_name"
        android:background="#FFFFFF"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="10"
        android:hint="Username"
        android:id="@+id/register_username"
        android:layout_below="@id/user_email"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/user_email"
        android:layout_alignEnd="@+id/user_email"
        android:layout_alignLeft="@+id/user_email"
        android:layout_alignStart="@+id/user_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/register_password"
        android:layout_below="@id/register_username"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignRight="@+id/register_username"
        android:layout_alignEnd="@+id/register_username"
        android:layout_alignLeft="@+id/register_username"
        android:layout_alignStart="@+id/register_username" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_submit"
        android:text="Register"
        android:background="#540115"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_alignRight="@+id/first_name"
        android:layout_alignEnd="@+id/first_name" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:background="#FFFFFF"
        android:layout_below="@+id/register_password"
        android:entries="@array/sec_quest"
        android:layout_alignLeft="@+id/register_password"
        android:layout_alignStart="@+id/register_password"
        android:layout_marginTop="25dp" />

    <EditText
        android:height="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:layout_below="@+id/question"
        android:background="#FFFFFF"
        android:hint="Answer"
        android:layout_alignLeft="@+id/question"
        android:layout_alignStart="@+id/question"
        android:layout_marginTop="32dp"
        android:layout_alignRight="@+id/last_name"
        android:layout_alignEnd="@+id/last_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="canncel"
        android:background="#540115"
        android:textColor="#ffffff"
        android:id="@+id/cancel_button"
        android:layout_alignTop="@+id/register_submit"
        android:layout_toRightOf="@+id/first_name"
        android:layout_alignRight="@+id/answer"
        android:layout_alignEnd="@+id/answer" />

</RelativeLayout>
